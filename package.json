{
  "name": "help-with-prison-visits-internal",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/help-with-prison-visits-internal.git"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "scripts": {
    "start": "npm run css-build && node ./app/bin/www",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "record-build-info": "node scripts/record-build-info",
    "test": "standard && mocha --recursive test/unit/ --exit",
    "test-coverage": "nyc npm run test-unit",
    "test-unit": "mocha --recursive test/unit/ --exit",
    "test-integration": "KNEX_CONFIG=testing mocha --recursive test/integration/ --timeout 15000 --exit",
    "test-e2e": "KNEX_CONFIG=testing cypress run --config video=false",
    "test-e2e-ui": "KNEX_CONFIG=testing cypress open",
    "css-build": "./build-css"
  },
  "standard": {
    "ignore": [
      "jquery*.js",
      "ga.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "browser",
      "$",
      "cy",
      "expect"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.515.0",
    "applicationinsights": "^2.9.3",
    "axios": "^1.6.7",
    "bluebird": "^3.7.2",
    "bunyan": "^1.8.15",
    "bunyan-prettystream": "^0.1.3",
    "compression": "^1.7.4",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "csv-stringify": "^6.4.5",
    "datatables.net": "^2.0.0",
    "datatables.net-dt": "^2.0.0",
    "debug": "^4.3.4",
    "dotenv": "^16.4.4",
    "express": "~4.18.2",
    "express-session": "^1.18.0",
    "govuk_frontend_toolkit": "^9.0.1",
    "govuk_template_jinja": "^0.26.0",
    "govuk-elements-sass": "^3.1.3",
    "helmet": "^7.1.0",
    "jquery": "^3.7.1",
    "knex": "^3.1.0",
    "mkdirp": "^3.0.1",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "nunjucks": "^3.2.4",
    "on-finished": "^2.4.1",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "path": "^0.12.7",
    "ramda": "^0.29.1",
    "redis": "^4.6.13",
    "sanitize-html": "^2.11.0",
    "sass": "^1.71.0",
    "serve-favicon": "~2.5.0",
    "tedious": "^16.7.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "assert": "^2.1.0",
    "chai": "^5.1.0",
    "cypress": "^13.6.4",
    "mocha": "^10.3.0",
    "node-mocks-http": "^1.14.1",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1",
    "standard": "^17.1.0",
    "supertest": "^6.3.4"
  }
}
